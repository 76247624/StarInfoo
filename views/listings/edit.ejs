<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <body>
      <h2>Edit Listing</h2>
      <form
        method="POST"
        action="/listings/<%= listing.id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Edit your title:</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
            id="title"
            required
          />
          <div class="invalid-feedback">Please enter valid Title!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"
            >Edit your Description:</label
          >
          <textarea
            name="listing[description]"
            cols="50"
            rows="7"
            class="form-control"
            id="description"
            required
          >
 <%=listing.description %></textarea
          >
          <div class="invalid-feedback">Please enter valid Description!</div>
        </div>

        <p class="form-label"><b>Original Image:</b></p>
        <label for="image">
          <div class="mb-3">
            <img
              src="<%= listing.image.url %>"
              alt="Listing_Image"
              style="width: 300px; height: 200px"
            />
          </div>
        </label>
        <div class="mb-3">
          <label class="form-label">Upload New Image:</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            id="image"
          />
          <div class="valid-feedback">You can skip this box....</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Edit price:</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              class="form-control"
              id="price"
              required
            />
            <div class="invalid-feedback">Please enter valid Price!</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Edit your Location:</label>
            <input
              type="text"
              name="listing[location]"
              value="<%= listing.location %>"
              class="form-control"
              id="location"
              required
            />
            <div class="invalid-feedback">Please enter valid Location!</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Edit your Country:</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            class="form-control"
            id="country"
            required
          />
          <div class="invalid-feedback">Please enter valid Country name!</div>
        </div>
        <Button type="submit" class="btn btn-dark edit-dtn mt-3">Submit</Button>
        <br /><br />
      </form>
    </body>
  </div>
</div>
