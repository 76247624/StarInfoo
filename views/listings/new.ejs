<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <body>
      <br /><br />
      <h2>Add New Listing</h2>
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-2">
          <label for="title" class="form-label">Enter Title:</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            placeholder="Add an awesome title......."
            id="title"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please enter valid Title</div>
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Enter Description:</label>
          <textarea
            name="listing[description]"
            rows="4"
            class="form-control"
            placeholder="Add a description about your Listing ............"
            id="description"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter valid Description!</div>
        </div>

        <div class="mb-2">
          <label for="image" class="form-label">Upload Listing Image:</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            id="image"
            required
          />
          <div class="invalid-feedback">
            Please Select atlest one Image for your Listing!
          </div>
        </div>

        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="price" class="form-label">Enter price:</label>
            <input
              name="listing[price]"
              class="form-control"
              placeholder="7624...."
              id="price"
              required
            />
            <div class="invalid-feedback">Please enter valid Price!</div>
          </div>
          <div class="mb-2 col-md-8">
            <label for="location" class="form-label">Enter Location:</label>
            <input
              type="text"
              name="listing[location]"
              class="form-control"
              placeholder="Lahore, Islamabad ......"
              id="location"
              required
            />
            <div class="invalid-feedback">Please enter valid Location!</div>
          </div>
        </div>
        <div class="mb-2">
          <label for="country" class="form-label">Enter Country Name:</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="Pakistan......"
            id="country"
            required
          />
          <div class="invalid-feedback">Please enter valid Country name!</div>
        </div>

        <button type="submit" class="btn btn-dark mb-3 add-btn mt-3">
          Add Listing
        </button>
      </form>
    </body>
  </div>
</div>
