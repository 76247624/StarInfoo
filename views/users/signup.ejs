<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-6 offset-3 mb-3 mt-1"><h1>Signup on StarInfoo:</h1></div>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" novalidate class="needs-validation">
      <div class="mb-4">
        <label for="username" class="form-label">Username:</label>
        <input
          type="text"
          name="username"
          class="form-control"
          placeholder="Enter your username, Which will be used to login..."
          required
          id="username"
        />
        <div class="valid-feedback">Username looks good!</div>
        <div class="invalid-feedback">Please enter valid Username!</div>
      </div>
      <div class="mb-4">
        <label for="email" class="form-label">Email:</label>
        <input
          type="email"
          name="email"
          class="form-control"
          required
          placeholder="Enter your email address, don't forget to add @ in it..."
          id="email"
        />
        <div class="valid-feedback">Email looks good!</div>
        <div class="invalid-feedback">Please enter valid Email!</div>
      </div>
      <div class="mb-4">
        <label for="password" class="form-label">Password:</label>
        <input
          type="password"
          name="password"
          class="form-control"
          required
          placeholder="Enter an unique password and don't share it with others..."
          id="password"
        />
        <div class="valid-feedback">Password looks good!</div>
        <div class="invalid-feedback">Please enter valid Password!</div>
      </div>
      <button type="submit" class="btn btn-success mb-3">Signup</button>
    </form>
  </div>
</div>
